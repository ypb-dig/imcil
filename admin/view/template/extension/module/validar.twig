{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
     <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
	
	{% if atual %}
    <div class="alert alert-info"><i class="fa fa-exclamation-circle"></i> Existe uma nova versão do módulo <b>{{ module_name }}</b> faça o download <a href="{{ murl }}" target="_blank">AQUI</a>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
	
    <div class="panel panel-default">
      <div class="panel-heading">
         <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ heading_title }}</h3>
      </div>
      <div class="panel-body">
	   <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <ul class="nav nav-tabs" id="tabs">
            <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
            <li><a href="#tab-help" data-toggle="tab">{{ tab_help }}</a></li>
          </ul>
	 <div class="tab-content">

    <div class="tab-pane active" id="tab-general">
	<div class="form-group">
     <label class="col-sm-2 control-label" for="input-cron">{{ entry_cron }}</label>
	 <div class="col-sm-10">
	 <input type="text" value="{{ text_cron }}" name="cron" id="input-cron" class="form-control" disabled />
	 <p>{{ entry_cron2 }}</p>
	 </div>
     </div>
    <div class="form-group">
           <label class="col-sm-8 control-label" for="input-ativo">{{ text_ajuda }} <a href="{{ link_custom_field }}"> CLIQUE AQUI </a></label>
           </div>
    <div class="form-group">
           <label class="col-sm-2 control-label" for="input-ativo">{{ entry_ativar }} {{ entry_cpf }}</label>
            <div class="col-sm-10">
              
                <label class="radio-inline">
				 {% if module_validar_ativo %}
                <input type="radio" name="module_validar_ativo" value="1" checked="checked" />
                {{ text_yes }}
                 {% else %}
                <input type="radio" name="module_validar_ativo" value="1" />
                {{ text_yes }}
               {% endif %}
              </label>
              <label class="radio-inline">
                 {% if not module_validar_ativo %}
                <input type="radio" name="module_validar_ativo" value="0" checked="checked" />
                {{ text_no }}
                {% else %}
                <input type="radio" name="module_validar_ativo" value="0" />
                {{ text_no }}
               {% endif %}
              </label>
              
            </div>
          </div>
		  
		   <div class="form-group">
			    <label class="col-sm-2 control-label">{{ entry_grupo }}</label>
				<div class="col-sm-10">
				  <select name="module_validar_grupo" id="input-grupo" class="form-control">
				    {% for customer_group in customer_groups %}
					{% if module_validar_grupo == customer_group.customer_group_id %}
					<option value="{{ customer_group.customer_group_id }}" selected="selected">{{ customer_group.name }}</option>
					{% else %}
					<option value="{{ customer_group.customer_group_id }}">{{ customer_group.name }}</option>
					{% endif %}
					{% endfor %}
				  </select>
				 
				</div>
			  </div>
   
    <div class="form-group">
			    <label class="col-sm-2 control-label"><span data-toggle="tooltip" data-html="true" title="{{ help_cpf }}">{{ entry_cpf }}</span></label>
				<div class="col-sm-10">
				  <select name="module_validar_cpf" id="input-cpf" class="form-control">
				 {% for custom_field in custom_fields %}
				    {% if custom_field.location == 'account' %}
					{% if module_validar_cpf == custom_field.custom_field_id %}
					<option value="{{ custom_field.custom_field_id }}" selected="selected">{{ custom_field.name }}</option>
					{% else %}
					<option value="{{ custom_field.custom_field_id }}">{{ custom_field.name }}</option>
					{% endif %}
					{% endif %} 
					{% endfor %}
				  </select>
				 
				</div>
			  </div>
              
              
               <div class="form-group">
           <label class="col-sm-2 control-label" for="input-ativo1">{{ entry_ativar }} {{ entry_cnpj }}</label>
            <div class="col-sm-10">
              
                <label class="radio-inline">
                  {% if module_validar_ativo1 %}
                <input type="radio" name="module_validar_ativo1" value="1" checked="checked" />
