                  {% else %}
                <input type="radio" name="module_validar_ativo1" value="1" />
                  {{ text_yes }}
                  {% endif %}
              </label>
              <label class="radio-inline">
                  {% if not module_validar_ativo1 %}
                <input type="radio" name="module_validar_ativo1" value="0" checked="checked" />
                  {{ text_no }}
                  {% else %}
                <input type="radio" name="module_validar_ativo1" value="0" />
                  {{ text_no }}
                  {% endif %}
              </label>
              
            </div>
          </div>
		  
		    <div class="form-group">
			    <label class="col-sm-2 control-label">{{ entry_grupo }}</label>
				<div class="col-sm-10">
				  <select name="module_validar_grupo1" id="input-grupo" class="form-control">
				    {% for customer_group in customer_groups %}
					{% if module_validar_grupo1 == customer_group.customer_group_id %}
					<option value="{{ customer_group.customer_group_id }}" selected="selected">{{ customer_group.name }}</option>
					{% else %}
					<option value="{{ customer_group.customer_group_id }}">{{ customer_group.name }}</option>
					{% endif %}
					{% endfor %}
				  </select>
				 
				</div>
			  </div>
              
              <div class="form-group">
			    <label class="col-sm-2 control-label"><span data-toggle="tooltip" data-html="true" title="{{ help_cnpj }}">{{ entry_cnpj }}</span></label>
				<div class="col-sm-10">
				  <select name="module_validar_cnpj" id="input-cnpj" class="form-control">
				    {% for custom_field in custom_fields %}
				    {% if custom_field.location == 'account' %}
					{% if module_validar_cnpj == custom_field.custom_field_id %}
					<option value="{{ custom_field.custom_field_id }}" selected="selected">{{ custom_field.name }}</option>
					{% else %}
					<option value="{{ custom_field.custom_field_id }}">{{ custom_field.name }}</option>
					{% endif %}
					{% endif %} 
					{% endfor %}
				  </select>
				  
				</div>
			  </div>
              
              
               <div class="form-group">
            <label class="col-sm-2 control-label" for="input-aviso">Atenção:</label>
            <div class="col-sm-10">
            {{ text_aviso }}
            </div>
          </div> 
                <div class="form-group">
           <label class="col-sm-2 control-label" for="input-ativo2">{{ entry_ativar }}  {{ entry_misto }}</label>
            <div class="col-sm-10">
              
                <label class="radio-inline">
               {% if module_validar_ativo2 %}
