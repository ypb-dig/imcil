    <!-- ADICIONANDO NA CONFIGURACAO O CODEMARKET - CHAVE API -->
    <file path="admin/controller/setting/setting.php">
        <operation>
            <search>
                <![CDATA[
                    if (isset($this->request->post['config_meta_title'])) {
                ]]>
            </search>
            <add position="before">
                <![CDATA[
                    if (isset($this->request->post['config_code_key_api'])) {
